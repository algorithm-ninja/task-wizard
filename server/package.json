{
    "name": "turingarena-server",
    "private": true,
    "scripts": {
        "prepare": "npm run graphql-codegen",
        "serve": "ts-node --transpile-only src/serve.ts",
        "watch:serve": "ts-node-dev --clear --transpileOnly src/serve.ts",
        "debug:serve": "ts-node-dev --inspect-brk --transpileOnly src/serve.ts",
        "graphql-codegen": "ts-node-dev --transpileOnly src/graphql-codegen.ts",
        "watch:graphql-codegen": "npm-watch graphql-codegen",
        "lint:ts": "tslint --project .",
        "fix:ts": "tslint --fix --project .",
        "lint:format": "prettier --check **",
        "fix:format": "prettier --write **",
        "lint": "npm-run-all --sequential lint:ts lint:format",
        "watch:lint": "npm-watch lint",
        "fix": "npm-run-all --sequential fix:ts fix:format",
        "test": "jest",
        "watch:test": "jest --watch",
        "check": "npm-run-all --sequential lint test",
        "start": "stmux -a a --mouse --title 'PRESS Ctrl-A K TO EXIT' --file spec.stmux",
        "cli": "ts-node -T src/cli/index.ts"
    },
    "watch": {
        "lint": {
            "patterns": [
                "."
            ],
            "extensions": "ts,js,graphql",
            "delay": 2000,
            "clearBuffer": true
        },
        "graphql-codegen": {
            "patterns": [
                "."
            ],
            "extensions": "ts,js,graphql",
            "delay": 2000,
            "clearBuffer": true
        }
    },
    "dependencies": {
        "@types/commander": "^2.12.2",
        "apollo-server-core": "^2.9.16",
        "apollo-server-express": "^2.9.16",
        "commander": "^4.1.0",
        "express": "^4.17.1",
        "graphql": "^14.5.8",
        "graphql-tools": "^4.0.6",
        "luxon": "^1.21.3",
        "mime-types": "^2.1.26",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^5.21.3",
        "sequelize-typescript": "^1.1.0",
        "sqlite3": "^4.1.1",
        "uuid": "^3.4.0",
        "which": "^2.0.2",
        "yaml": "^1.7.2"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^1.11.2",
        "@graphql-codegen/cli": "^1.11.2",
        "@graphql-codegen/introspection": "1.11.2",
        "@graphql-codegen/schema-ast": "^1.11.2",
        "@graphql-codegen/typescript": "1.11.2",
        "@graphql-codegen/typescript-operations": "^1.11.2",
        "@graphql-codegen/typescript-resolvers": "1.11.2",
        "@types/bluebird": "^3.5.29",
        "@types/jest": "^24.9.0",
        "@types/luxon": "^1.21.0",
        "@types/mime-types": "^2.1.0",
        "@types/node": "^13.1.8",
        "@types/uuid": "^3.4.6",
        "@types/validator": "^12.0.1",
        "@types/which": "^1.3.2",
        "apollo": "^2.21.3",
        "jest": "^24.9.0",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.6.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.3.0",
        "ts-node": "^8.6.2",
        "ts-node-dev": "^1.0.0-pre.44",
        "tslint": "^5.20.1",
        "typescript": "^3.7.5"
    }
}
