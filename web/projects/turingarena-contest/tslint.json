{
  "extends": "../../tslint.json",
  "linterOptions": {
    "exclude": [
      "src/environments/environment.ts",
      "src/polyfills.ts",
      "**/*.e2e-spec.ts",
      "**/*.spec.ts"
    ]
  },
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ]
  }
}
